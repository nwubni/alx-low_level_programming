CC = gcc
SRC = main.c utils.c file.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) -o $(NAME) $(OBJ)

%.o: %.c
	$(CC) -c $< -o $@

clean:
	$(RM) $(OBJ)
	$(RM) $(NAME)
	$(RM) *~ # Remove Emacs and Vim temporary files

oclean:
	$(RM) $(OBJ)

fclean: clean

re: fclean all

